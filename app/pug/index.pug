                    th
                tbody
                  tr
                    td Value #1
                    td Value #2
                    td Value #3
                    td(colspan="3") Value #4
                  tr
                    td Value #1
                    td Value #2
                    td Value #3
                    td(colspan="3") Value #4
                  tr
                    td Value #1
